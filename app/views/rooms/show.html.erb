<%= feedback_tab(:position => 'top') %>
<div id = "header">			 	
	<h1>Now   
	<iframe src="http://www.google.com/uds/modules/elements/newsshow/iframe.html?topic=e,p,s,n&rsz=small"
	        frameborder="0" width="728" height="90" marginwidth="0" marginheight="0"></iframe></h1>
</div>

<div id="notice" class="indicator"></div>

<p>You have <span id="counter"></span> characters left.</p>
<div id = "content">
	<form id = "room_form">
		<%= text_area_tag(:comment, nil, :behavior => "room_speaker") %>
